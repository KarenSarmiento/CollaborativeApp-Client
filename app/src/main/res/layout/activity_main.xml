<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".collaboration.MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

<!--    For evaluation purposes only!!-->
    <Button
        android:id="@+id/store_init_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Test.init" />

    <Button
        android:id="@+id/insert_50_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert 50 todos" />

    <Button
        android:id="@+id/tick_25_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tick 25 todos" />

    <include
        layout="@layout/todo_entry_box"
        android:id="@+id/todo_entry_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_todos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
</LinearLayout>
